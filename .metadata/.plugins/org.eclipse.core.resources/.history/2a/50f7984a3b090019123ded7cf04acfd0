package application;

import java.util.Scanner;

import entities.Pessoas2;

public class Tentando4 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		Pessoas2 [] vetor = new Pessoas2[3];
		System.out.println("How many emloyees will be registered? ");
		int n = sc.nextInt();
		for (int i = 0; i<n; i++) {
			System.out.println("Emplyoee #"+i);
			System.out.println("ID");
			int id = sc.nextInt();
			System.out.println("Name");
			sc.nextLine();
			String name = sc.nextLine();
			System.out.println("Salary");
			double salary = sc.nextDouble();
			vetor[id] = new Pessoas2(name, salary);
			System.out.println("Enter the employe id thar will have salary increase");
			int employee = sc.nextInt();
			System.out.println("Enter the percentage");
			double percentage = sc.nextDouble();
			if (percentage == id) {
				double resultado = id + percentage;
			}
			else {
				System.out.println("Fodase");
			}
			
		}
		

	}

}
