package application;

public class Matrizes6 {

	public static void main(String[] args) {
		
		double [][] matriz = new double [3][4];
		
		matriz[0][0] = 10;
		matriz[0][1] = 7;
		matriz[0][2] = 9;
		matriz[0][3] = 9.5;

		matriz[1][0] = 9;
		matriz[1][1] = 8;
		matriz[1][2] = 7;
		matriz[1][3] = 9;

		matriz[2][0] = 8;
		matriz[2][1] = 9;
		matriz[2][2] = 10;
		matriz[2][3] = 7;
		
		for (int i=0; i<matriz.length; i++) {
			for (int j=0; j<matriz.length; j++) {
				if (matriz[i][j]%2==0) {
					double soma = 0;
					soma += matriz[i][j];
					
					System.out.printf("A soma é", soma);
				}
			}
		}

	}

}
